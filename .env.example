# LLM Configuration
AZURE_OPENAI_LLM_ENDPOINT=https://aiportalapi.stu-platform.live/jpe
AZURE_OPENAI_LLM_API_KEY=your_azure_llm_key_here
AZURE_OPENAI_LLM_MODEL=GPT-4o

# Embeddings Configuration
AZURE_OPENAI_EMBEDDING_ENDPOINT=https://aiportalapi.stu-platform.live/jpe
AZURE_OPENAI_EMBEDDING_API_KEY=your_azure_embedding_key_here
AZURE_OPENAI_EMBED_MODEL=text-embedding-3-small

# Optional - Tavily Search API
TAVILY_API_KEY=your_tavily_key_here

# Gemini API Key (Primary LLM)
GEMINI_API_KEY=your_gemini_api_key_here

# LLM Provider Settings
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.5-flash
TEMPERATURE=0.5
MAX_TOKENS=4000

# HuggingFace Token (for Speaker Diarization)
# Get token from: https://huggingface.co/settings/tokens
# Accept terms at: https://huggingface.co/pyannote/speaker-diarization-3.1
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Vector Store Configuration
VECTOR_STORE=chroma  # Options: chroma (local, free) or pinecone (cloud, scalable)

# PineCone Configuration (Optional - only if using PineCone)
# Get API key from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=meeting-analyzer
